<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Shape appearances -->
    <style name="ShapeAppearance.Economix.Large" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerSize">@dimen/corner_lg</item>
    </style>

    <style name="ShapeAppearance.Economix.Medium" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerSize">@dimen/corner_md</item>
    </style>

    <!-- Text appearances -->
    <style name="TextAppearance.Economix.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Economix.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.Economix.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Economix.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/color_on_surface_variant</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Economix.Label" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/color_on_surface_variant</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.Economix.Button.Base" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/spacing_lg</item>
        <item name="android:paddingEnd">@dimen/spacing_lg</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Economix.Large</item>
    </style>

    <style name="Widget.Economix.Button.Primary" parent="Widget.Economix.Button.Base">
        <item name="backgroundTint">@color/color_primary</item>
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="rippleColor">@color/color_primary_container</item>
    </style>

    <style name="Widget.Economix.Button.Secondary" parent="Widget.Economix.Button.Base">
        <item name="backgroundTint">@color/color_secondary</item>
        <item name="android:textColor">@color/color_on_secondary</item>
        <item name="rippleColor">@color/color_secondary_container</item>
    </style>

    <style name="Widget.Economix.Button.Surface" parent="Widget.Economix.Button.Base">
        <item name="backgroundTint">@color/color_surface_variant</item>
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="rippleColor">@color/color_primary_container</item>
    </style>

    <style name="Widget.Economix.Button.Destructive" parent="Widget.Economix.Button.Base">
        <item name="backgroundTint">@color/color_error</item>
        <item name="android:textColor">@color/color_on_error</item>
        <item name="rippleColor">@color/color_error</item>
    </style>

    <style name="Widget.Economix.Button.Tertiary" parent="Widget.Material3.TextButton">
        <item name="android:textColor">@color/color_primary</item>
        <item name="rippleColor">@color/color_primary_container</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Cards -->
    <style name="Widget.Economix.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/color_surface</item>
        <item name="cardElevation">@dimen/elevation_card</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Economix.Large</item>
        <item name="android:contentPadding">@dimen/spacing_xl</item>
    </style>

    <!-- Text input -->
    <style name="Widget.Economix.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/color_surface</item>
        <item name="boxStrokeColor">@color/color_outline</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/color_on_surface_variant</item>
        <item name="helperTextTextColor">@color/color_on_surface_variant</item>
        <item name="android:textColorHint">@color/color_on_surface_variant</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Economix.Large</item>
    </style>

    <style name="Widget.Economix.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="android:buttonTint">@color/color_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.Economix.TextInputEditText" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/color_on_surface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>

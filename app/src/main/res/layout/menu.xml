<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/spacing_lg"
    android:paddingTop="@dimen/spacing_xl"
    android:paddingBottom="@dimen/spacing_3xl"
    tools:context=".Vista.menu">

    <!-- Barra superior: ayuda (izq) y perfil (der) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnAyuda"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Ayuda"
            android:padding="@dimen/spacing_sm"
            android:src="@drawable/ayuda"
            android:tint="@color/color_primary" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnPerfil"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Perfil"
            android:padding="@dimen/spacing_sm"
            android:src="@drawable/usuario"
            android:tint="@color/color_primary" />
    </LinearLayout>

    <!-- Título -->
    <TextView
        android:id="@+id/txtHolaUsuario"
        style="@style/TextAppearance.Economix.TitleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/spacing_2xl"
        android:layout_marginBottom="@dimen/spacing_xl"
        android:text="HOLA USUARIO" />

    <!-- Fila 1: GASTOS / INGRESOS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Tile GASTOS -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tileGastos"
            style="@style/Widget.Economix.Card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_sm"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/color_primary_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/tile_icon_size"
                    android:layout_height="@dimen/tile_icon_size"
                    android:contentDescription="Icono gastos"
                    android:src="@drawable/ic_dashboard_black_24dp"
                    android:tint="@color/color_primary" />

                <TextView
                    style="@style/TextAppearance.Economix.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:text="GASTOS"
                    android:textAllCaps="true" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tile INGRESOS -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tileIngresos"
            style="@style/Widget.Economix.Card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_sm"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/color_secondary_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/tile_icon_size"
                    android:layout_height="@dimen/tile_icon_size"
                    android:contentDescription="Icono ingresos"
                    android:src="@drawable/ic_home_black_24dp"
                    android:tint="@color/color_secondary" />

                <TextView
                    style="@style/TextAppearance.Economix.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:text="INGRESOS"
                    android:textAllCaps="true" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Fila 2: AHORRO / GRÁFICOS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xl"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Tile AHORRO -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tileAhorro"
            style="@style/Widget.Economix.Card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_sm"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/color_primary_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/tile_icon_size"
                    android:layout_height="@dimen/tile_icon_size"
                    android:contentDescription="Icono ahorro"
                    android:src="@drawable/ic_notifications_black_24dp"
                    android:tint="@color/color_primary" />

                <TextView
                    style="@style/TextAppearance.Economix.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:text="AHORRO"
                    android:textAllCaps="true" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tileGraficas"
            style="@style/Widget.Economix.Card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_sm"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/color_secondary_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/tile_icon_size"
                    android:layout_height="@dimen/tile_icon_size"
                    android:contentDescription="Icono gráficas"
                    android:src="@drawable/ic_dashboard_black_24dp"
                    android:tint="@color/color_secondary" />

                <TextView
                    style="@style/TextAppearance.Economix.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:text="GRÁFICAS"
                    android:textAllCaps="true" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</LinearLayout>
